@model IEnumerable<Viddly3.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>
@Html.ActionLink("New Customer", "New", "Customer", "", new { @class = "btn btn-primary" })
<br />
<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Membership Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.MembershipType.Name</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = customer.Id })
                    @Html.ActionLink("Edit", "Edit", new { id = customer.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#customers").DataTable();
        });
    </script>
}